APP_NAME=Fluxdesk
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://127.0.0.1:8000

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=fluxdesk
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue (usar Redis em produção)
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis
CACHE_PREFIX=

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - Mailgun
MAIL_MAILER=mailgun
MAIL_FROM_ADDRESS="noreply@tickets.fluxdesk.com.br"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun
MAILGUN_DOMAIN=tickets.fluxdesk.com.br
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net
MAILGUN_WEBHOOK_SIGNING_KEY=

# AWS / S3 (opcional - para armazenamento de anexos)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-2
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# SES (apenas se usar SES em vez de Mailgun)
# SES_REGION=us-east-2
# SES_WEBHOOK_SECRET=change-this-to-a-random-string
# SES_SNS_TOPIC_ARN=
# AWS_SES_S3_BUCKET=

# Vite
VITE_APP_NAME="${APP_NAME}"

# Reply-To HMAC para identificação segura de respostas
REPLY_HMAC_SECRET=change-this-to-a-strong-random-string
MAIL_REPLY_DOMAIN=tickets.fluxdesk.com.br
